{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@app/*":    ["src/app/*"],
      "@env/*":    ["src/environments/*"],
      "@core/*":   ["src/app/core/*"],
      "@global/*": ["src/app/global/*"],
      "@shared/*": ["src/app/shared/*"],
      "@guard/*":  ["src/app/core/guard/*"],
      "@model/*":  ["src/app/data/model/*"],
      "@service/*":["src/app/data/service/*"],
      "@module/*": ["src/app/modules/*"],
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
